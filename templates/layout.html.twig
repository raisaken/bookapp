<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>{% block title %}Book App{% endblock %}</title>
  <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100 text-gray-900">
  <nav class="bg-white shadow p-4">
    <div class="container mx-auto flex justify-between items-center">
      <a href="{{ base_url | default('/bookapp/public') }}" class="font-bold text-xl">BookApp</a>
      <div>
        {% if auth.user %}
          <span class="mr-4">Hi, {{ auth.user.username }}</span>
          <a href="?p=books/list" class="mr-2">Books</a>
          <a href="?p=books/create" class="mr-2">Add Book</a>
          <a href="?p=auth/logout" class="text-red-600">Logout</a>
        {% else %}
          <a href="?p=auth/login" class="mr-2">Login</a>
          <a href="?p=auth/register" class="mr-2">Register</a>
        {% endif %}
      </div>
    </div>
  </nav>
  <main class="container mx-auto p-6">
    {% block content %}{% endblock %}
  </main>
</body>
</html>
